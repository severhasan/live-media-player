{
  // "extends": "./tsconfig.json", // on for production, off for developent
  "compilerOptions": {
    "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "removeComments": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "experimentalDecorators": true
    // "noImplicitAny": true,
    // "sourceMap": true,
  },
  "include": [
    "./src/server/index.ts"
  ]
}
