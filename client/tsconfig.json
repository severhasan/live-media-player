{
    "compilerOptions": {
        "target": "es6",
        "lib": ["ES2019.Array", "ES2019", "dom", "dom.iterable", "esnext"],
        "rootDir": "./src",
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "module": "esnext",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "downlevelIteration": true,
        "removeComments": true,
        "experimentalDecorators": true
    },
    "include": [
        "next-env.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/containers/Auth/Auth.tsz"
    ],
    "exclude": ["node_modules"]
}
